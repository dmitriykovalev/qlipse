<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="%commandCategoryDesc"
            id="org.eclipselabs.qlipse.commands.category"
            name="%commandCategoryName">
      </category>
      <command
            categoryId="org.eclipselabs.qlipse.commands.category"
            id="org.eclipselabs.qlipse.commands.open"
            name="%openQuickLookCommand">
      </command>
      <command
            categoryId="org.eclipselabs.qlipse.commands.category"
            defaultHandler="org.eclipselabs.qlipse.internal.CloseQuickLookHandler"
            id="org.eclipselabs.qlipse.commands.close"
            name="%closeQuickLookCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipselabs.qlipse.commands.open"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="SPACE">
      </key>
      <key
            commandId="org.eclipselabs.qlipse.commands.close"
            contextId="org.eclipselabs.qlipse.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ESC">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="%contextDesc"
            id="org.eclipselabs.qlipse.context"
            name="%contextName">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipselabs.qlipse.internal.OpenQuickLookHandler"
            commandId="org.eclipselabs.qlipse.commands.open">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <or>
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </or>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>
</plugin>
